[bar/mybar]
inherit = bar/default
monitor = LVDS-1
width = 100%
height = 20
override-redirect = false
tray-position = right
tray-maxsize = 18
modules-left = xwindow
modules-center =
modules-right = keyboard gmail volume wireless-network wired-network date

[module/xwindow]
type = internal/xwindow
label = > %title% 
label-maxlen = 80
format-margin = 0

[module/keyboard]
type = internal/xkeyboard
format = <label-layout>
format-prefix= " "
format-prefix-foreground = ${colors.lightgreen}
format-foreground = ${colors.lightgreen}

[module/date]
type = internal/date
interval = 60
date = "%d-%m-%Y"
time = %H:%M
format = %{A1:xdg-open https\://calendar.google.com/calendar & disown:} <label> %{A}
format-margin-right = 0
format-foreground = ${colors.orange}
label =   %date%  %time%

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
format-muted =  muted
format-volume-foreground = ${colors.pink}
format-muted-foreground = ${colors.red}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
interval = 2

[module/backlight]
